#!/bin/bash
#### lnmp-70 v0.0.1
source ./initfile
####
chmod 600 ${INSTALL_PATH}/initfile
chmod 600 ${INSTALL_PATH}/nginx-build
chmod 400 ${INSTALL_PATH}/last_optimization
##############################################
#echo -e "LAMP(Linux, Apache, MariaDB, PHP)でインストールしますか？ [y] \n"
echo -e "LNMP(Linux, Nginx, MariaDB, PHP7.0)でインストールしますか？ [y] \n"
read instaltolamp
##############################################
if [ ${instaltolamp} = "y" ] ; then
### LAMP Mode Install Start.
### Nginx+Apache Mode Install Start.
##############################################
ln -s ${INSTALL_PATH}/ReverseProxy/01-default-setup ${INSTALL_PATH}/NA01-DEF.sh
ln -s ${INSTALL_PATH}/ReverseProxy/02-server-setup ${INSTALL_PATH}/NA02-WEB.sh
ln -s ${INSTALL_PATH}/ReverseProxy/03-cms-setup ${INSTALL_PATH}/NA03-CMS.sh
chmod -R +x ${INSTALL_PATH}/{NA01-DEF.sh,NA02-WEB.sh,NA03-CMS.sh,NGXBUILD.sh}
##############################################
fi